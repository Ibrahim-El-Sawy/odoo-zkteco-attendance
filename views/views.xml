<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

  <record id="apis_employee_check_action" model="ir.actions.act_window">
    <field name="name">API Attendance</field>
    <field name="res_model">data.attendance</field>
    <field name="view_mode">tree,form</field>
  </record>

  


  <record id="apis_employee_check_form" model="ir.ui.view">
    <field name="name">apis.attendance.form</field>
    <field name="model">data.attendance</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name" />
            <field name="date_only"/>
            <field name="check_in" />
            <field name="check_out"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="apis_employee_check_tree" model="ir.ui.view">
    <field name="name">apis.attendance.tree</field>
    <field name="model">data.attendance</field>
    <field name="arch" type="xml">
    <tree string="Attendance">
        <field name="name"/>
        <field name="date_only"/>
        <field name="check_in"/>
        <field name="check_out"/>
    </tree>
    </field>
  </record>
 
  <menuitem id="menu_api_root" name="API Menu" sequence="1"/>
  <menuitem
      id="menu_api_attendance"
      parent="menu_api_root"
      name="API Attendance"
      action="apis_employee_check_action"
      sequence="20"
  />
</odoo>
